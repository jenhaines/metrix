<div class='row'>
 <div class='col-md-8'>
   <% if @app.errors.any? %>
  <div class="alert alert-danger">
    <h4>There are <%= pluralize(@app.errors.count, "error") %>.</h4>
    <ul>
      <% @app.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 </div>
  <div class='col-md-8'>
  <h2>New App</h2>
    <%= form_for @app do |a| %>
    <div class='form-group'>
     <%= content_tag :div, class: form_tag_group(@app.errors[:name]) do %>
      <%= a.label :name %>
      <%= a.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter app name" %>
      <% end %>
    </div>
      <div class="form-group">
      <%= content_tag :div, class: form_tag_group(@app.errors[:desc]) do %>
        <%= a.label :desc %>
      <%= a.text_area :desc, rows: 8,  class: 'form-control', placeholder: "Enter a description" %>
      <% end %>
      </div>
      <%= a.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>

</div>